<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context="com.amazonaws.youruserpools.UserActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/button1"
        android:text="Click a Photo"
        android:onClick="onClickCammera"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/action_bar_text"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/button3"
        android:text="Select Images"
        android:onClick="onClickSelectImages"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/action_bar_text"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/button4"
        android:text="Search Location"
        android:onClick="onClickMaps"
        android:textSize="@dimen/action_bar_text"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/button5"
        android:text="Check Weather"
        android:onClick="onClickWeather"
        android:textSize="@dimen/action_bar_text"
        android:layout_above="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/button6"
        android:text="Cloud Menu"
        android:onClick="onClickCloud"
        android:textSize="@dimen/action_bar_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp" />

</RelativeLayout>
